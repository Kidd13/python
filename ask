def sfera():
  jejari=float(input("Maskkan nilai jejari"))
  isipadu=4/3*3.142*jejari*jejari*jejari
  print("Isipadu sfera adalaj: ",round(isipadu,3))
  num=int(random()*10)
  for i in range(0,num):
    xpos=random()*10
    ypos=random()*10
    zpos=random()*10
